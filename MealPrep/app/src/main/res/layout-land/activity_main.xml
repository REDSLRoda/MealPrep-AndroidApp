<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:background="@drawable/heading_color"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="@string/MealPrep"
            android:textColor="@color/black"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:backgroundTint="#FFFFEB3B"
            android:text="@string/add_meals_to_db"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:backgroundTint="#FF4CAF50"
            android:gravity="center"
            android:text="@string/search_for_meals_by_ingredient"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:text="@string/search_for_meals"
            android:textColor="@color/black"
            android:backgroundTint="#BC9FF1"
            android:gravity="center"
            android:textSize="20sp"
            app:cornerRadius="20dp"/>
        <Button
            android:id="@+id/btnname"
            app:cornerRadius="20dp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/search_by_name"
            android:textColor="@color/black"
            android:backgroundTint="#FFFF5722"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv"
            app:cornerRadius="20dp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>









